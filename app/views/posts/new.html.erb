<h1>新規投稿</h1>

<%# エラーメッセージがある場合の表示 %>
<% if @post.errors.any? %>
  <div style="color: red;">
    <h2><%= @post.errors.count %> 件のエラーがあります:</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :name, "名前" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :content, "内容" %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "投稿する" %>
  </div>
<% end %>

<%= link_to "タイムラインへ戻る", root_path %>

